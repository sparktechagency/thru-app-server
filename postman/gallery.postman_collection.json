{
  "info": {
    "name": "Gallery API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Gallery",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"belongsTo\": \"{{belongsTo}}\",\n  \"images\": [],\n  \"date\": \"{{date}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/gallery",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "gallery"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.variables.set(\"date\", new Date().toISOString());"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get All Gallerys",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/gallery",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "gallery"
          ]
        }
      }
    },
    {
      "name": "Get Gallery by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/gallery/{{gallery_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "gallery",
            "{{gallery_id}}"
          ]
        }
      }
    },
    {
      "name": "Update Gallery",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"belongsTo\": \"{{belongsTo}}\",\n  \"images\": [],\n  \"date\": \"{{date}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/gallery/{{gallery_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "gallery",
            "{{gallery_id}}"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.variables.set(\"date\", new Date().toISOString());"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Delete Gallery",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/gallery/{{gallery_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "gallery",
            "{{gallery_id}}"
          ]
        }
      }
    }
  ]
}
{
  "info": {
    "name": "Plan API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Plan",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"{{title}}\",\n  \"description\": \"{{description}}\",\n  \"images\": [],\n  \"date\": \"{{date}}\",\n  \"location\": \"{{location}}\",\n  \"address\": \"{{address}}\",\n  \"link\": \"{{link}}\",\n  \"activities\": [],\n  \"friends\": []\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/plan",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "plan"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.variables.set(\"title\", \"title_\" + Date.now());",
              "pm.variables.set(\"description\", \"description_\" + Date.now());",
              "pm.variables.set(\"date\", new Date().toISOString());",
              "pm.variables.set(\"location\", \"location_\" + Date.now());",
              "pm.variables.set(\"address\", \"address_\" + Date.now());",
              "pm.variables.set(\"link\", \"link_\" + Date.now());"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get All Plans",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/plan",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "plan"
          ]
        }
      }
    },
    {
      "name": "Get Plan by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/plan/{{plan_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "plan",
            "{{plan_id}}"
          ]
        }
      }
    },
    {
      "name": "Update Plan",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"{{title}}\",\n  \"description\": \"{{description}}\",\n  \"images\": []\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/plan/{{plan_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "plan",
            "{{plan_id}}"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.variables.set(\"title\", \"title_\" + Date.now());",
              "pm.variables.set(\"description\", \"description_\" + Date.now());",
              "pm.variables.set(\"date\", new Date().toISOString());",
              "pm.variables.set(\"location\", \"location_\" + Date.now());",
              "pm.variables.set(\"address\", \"address_\" + Date.now());",
              "pm.variables.set(\"link\", \"link_\" + Date.now());"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Delete Plan",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/plan/{{plan_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "plan",
            "{{plan_id}}"
          ]
        }
      }
    }
  ]
}
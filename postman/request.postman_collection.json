{
  "info": {
    "name": "Request API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"requestedBy\": \"{{requestedBy}}\",\n  \"requestedTo\": \"{{requestedTo}}\",\n  \"status\": \"{{status}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/request",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "request"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const status_values = [\"pending\",\"accepted\",\"rejected\"];",
              "pm.variables.set(\"status\", status_values[Math.floor(Math.random() * status_values.length)]);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get All Requests",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/request",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "request"
          ]
        }
      }
    },
    {
      "name": "Get Request by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/request/{{request_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "request",
            "{{request_id}}"
          ]
        }
      }
    },
    {
      "name": "Update Request",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"requestedBy\": \"{{requestedBy}}\",\n  \"requestedTo\": \"{{requestedTo}}\",\n  \"status\": \"{{status}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/request/{{request_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "request",
            "{{request_id}}"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const status_values = [\"pending\",\"accepted\",\"rejected\"];",
              "pm.variables.set(\"status\", status_values[Math.floor(Math.random() * status_values.length)]);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Delete Request",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/request/{{request_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "request",
            "{{request_id}}"
          ]
        }
      }
    }
  ]
}
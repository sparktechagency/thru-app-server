    "item": [
        {
            "name": "Send Message",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"message\": \"Hello friend!\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/message/:friendId",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "message",
                        ":friendId"
                    ],

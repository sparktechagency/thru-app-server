{
    "info": {
        "name": "Post Module",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Post",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"My Trip to Paris\",\n  \"image\": \"https://example.com/paris.jpg\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/post",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "post"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Get All Posts",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/post?page=1&limit=10&searchTerm=paris",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "post"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        },
                        {
                            "key": "searchTerm",
                            "value": "paris"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Get Post By Id",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/post/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "post",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": ""
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Update Post",
            "request": {
                "method": "PATCH",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"Updated Trip Title\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/post/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "post",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": ""
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Delete Post",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/post/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "post",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": ""
                        }
                    ]
                }
            },
            "response": []
        }
    ]
}
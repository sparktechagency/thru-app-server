{
  "info": {
    "name": "Verification API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Verification",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"{{type}}\",\n  \"otpHash\": \"{{otpHash}}\",\n  \"requestCount\": \"{{requestCount}}\",\n  \"latestRequest\": \"{{latestRequest}}\",\n  \"expiresAt\": \"{{expiresAt}}\",\n  \"attempts\": \"{{attempts}}\",\n  \"createdAt\": \"{{createdAt}}\",\n  \"updatedAt\": \"{{updatedAt}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/verification",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "verification"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const type_values = [\"account_activation\",\"reset_password\"];",
              "pm.variables.set(\"type\", type_values[Math.floor(Math.random() * type_values.length)]);",
              "pm.variables.set(\"otpHash\", \"otpHash_\" + Date.now());",
              "pm.variables.set(\"requestCount\", Math.floor(Math.random() * 100));",
              "pm.variables.set(\"latestRequest\", new Date().toISOString());",
              "pm.variables.set(\"expiresAt\", new Date().toISOString());",
              "pm.variables.set(\"attempts\", Math.floor(Math.random() * 100));",
              "pm.variables.set(\"createdAt\", new Date().toISOString());",
              "pm.variables.set(\"updatedAt\", new Date().toISOString());"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get All Verifications",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/verification",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "verification"
          ]
        }
      }
    },
    {
      "name": "Get Verification by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/verification/{{verification_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "verification",
            "{{verification_id}}"
          ]
        }
      }
    },
    {
      "name": "Update Verification",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"{{type}}\",\n  \"otpHash\": \"{{otpHash}}\",\n  \"requestCount\": \"{{requestCount}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/verification/{{verification_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "verification",
            "{{verification_id}}"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const type_values = [\"account_activation\",\"reset_password\"];",
              "pm.variables.set(\"type\", type_values[Math.floor(Math.random() * type_values.length)]);",
              "pm.variables.set(\"otpHash\", \"otpHash_\" + Date.now());",
              "pm.variables.set(\"requestCount\", Math.floor(Math.random() * 100));",
              "pm.variables.set(\"latestRequest\", new Date().toISOString());",
              "pm.variables.set(\"expiresAt\", new Date().toISOString());",
              "pm.variables.set(\"attempts\", Math.floor(Math.random() * 100));",
              "pm.variables.set(\"createdAt\", new Date().toISOString());",
              "pm.variables.set(\"updatedAt\", new Date().toISOString());"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Delete Verification",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/verification/{{verification_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "verification",
            "{{verification_id}}"
          ]
        }
      }
    }
  ]
}